<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#bbdefb"
    tools:context=".ProductActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="10dp">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/imgSlider"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </androidx.cardview.widget.CardView>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etBaslik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Başlık"
                    android:textAlignment="center"
                    android:textColor="#212121"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#212121"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="Kategori"/>
                <EditText
                    android:id="@+id/tvKategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#212121"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:hint="Kategori"

                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"

                    android:textColor="#212121"
                    android:textSize="22sp"
                    android:text="Fiyat"/>
                <EditText
                    android:id="@+id/etFiyat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:textColor="#212121"
                    android:textAlignment="center"
                    android:hint="Fiyat"
                    android:textSize="22sp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            android:layout_height="150dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Açıklama:"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"

                    android:textColor="#212121"
                    android:textSize="22sp"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="@color/lightgray"
                    />
                <EditText
                    android:id="@+id/etAciklama"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginVertical="5dp"
                    android:gravity="top"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:hint="Ürün Açıklaması"
                    android:padding="5dp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnStartConversation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="5dp"
                android:text="Mesaj At"
                android:layout_weight="1"
                android:onClick="btnMesaj"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="@android:color/holo_orange_light"

                />
            <Button
                android:id="@+id/btnDeleteProduct"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="5dp"
                android:text="Sil"
                android:onClick="deleteProuct"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="@android:color/holo_orange_light"

                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnGüncelle"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:onClick="güncelle"
                android:text="güncelle"
                android:backgroundTint="@android:color/holo_orange_light"
                />
            <Button
                android:id="@+id/btnGüncellemeKayıt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:onClick="kaydet"
                android:text="Kaydet"
                android:backgroundTint="@android:color/holo_orange_light"
                />
        </LinearLayout>






        </LinearLayout>
    </ScrollView>

</LinearLayout>